// lets update the investments data...
var slot=0;

for(a=0;a&lt;1000;a+=1)
    {
    if obj_template.name[a]&lt;&gt;"" and obj_template.dealt[a]=1 // someone...
        {
        invMadeName[slot]=obj_template.businessName[a]
        invMadePerc[slot]=obj_template.dealtPercentage[a]
        invMadeVal[slot]=obj_template.askingAmount[a] / ( obj_template.percentAmount[a] / 100 );
        invMadeFC[slot]=obj_template.profits[a]
        if obj_template.sold[a]=true invMadeStatus[slot]=2 // will be shown last in the list
        if obj_template.sold[a]=false and obj_template.profits[a]&lt;0 invMadeStatus[slot]=1 // will be shown mid in the list
        if obj_template.sold[a]=false and obj_template.profits[a]&gt;0 invMadeStatus[slot]=0 // will be shown start in the list
        slot+=1
        }
    }
    
// Surface prep
surface_set_target(surf);
draw_clear_alpha(c_white,0);

// draw the info on the surface
draw_set_font(invFont)
draw_set_color(c_black)
for(b=0;b&lt;slot;b+=1)
    {
    draw_text(200,188+(b*15),string(invMadeName[b]))
        draw_text(340,188+(b*15),"$"+string(invMadeVal[b]))
            draw_text(450,188+(b*15),string(invMadePerc[b])+"%")
                draw_text(540,188+(b*15),"$"+string(invMadeFC[b]))
                if invMadeStatus[b]=2
                    {
                    draw_text(700,188+(b*15),"SOLD OUT")
                    }
               if invMadeStatus[b]=1
                    {
                    draw_text(700,188+(b*15),"Making LOSS")
                    }
               if invMadeStatus[b]=0
                    {
                    draw_text(700,188+(b*15),"In PROFIT")
                    }
    }
draw_set_color(c_white)    
surface_reset_target();
